# ============================================
# WA GATEWAY - ENVIRONMENT VARIABLES
# ============================================

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_NAME=wa_gateway

# JWT Secret (Generate random string 64 characters)
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long

# Server Configuration
PORT=5000
NODE_ENV=development

# Google OAuth (Optional - if using Google Sign-In)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost

# Session Secret
SESSION_SECRET=your_session_secret_key

# ============================================
# PRODUCTION NOTES:
# ============================================
# 1. Ganti semua value "your_*" dengan nilai sebenarnya
# 2. JWT_SECRET harus random & minimal 32 karakter
# 3. Jangan commit file .env ke Git!
# 4. Copy file ini ke .env dan isi dengan nilai sebenarnya
# ============================================
